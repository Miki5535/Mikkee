<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mikkee.Pages.ProfilePage"
             Title="Profile"
             BackgroundColor="White">
    <VerticalStackLayout Padding="20" Spacing="15">


<Border WidthRequest="150"
        HeightRequest="150"
        StrokeThickness="5"
        Stroke="Black" 
        StrokeShape="RoundRectangle 75" 
        HorizontalOptions="Center">

    <Grid Padding="10"> 
        <Image x:Name="profileImage"
               Source="dotnet_bot.png"
               Aspect="AspectFill"
               WidthRequest="150" 
               HeightRequest="150"/>
    </Grid>
</Border>


        <Label Text="โปรไฟล์ของคุณ"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333"/>

        <!-- Welcome Message -->
        <Label Text="ยินดีต้อนรับ!"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="#555"/>

        <!-- User Information -->
        <Label x:Name="userNameLabel"
               FontSize="16"
               HorizontalOptions="Start"
               TextColor="#333"/>
        <Label x:Name="studentIdLabel"
               FontSize="16"
               HorizontalOptions="Start"
               TextColor="#333"/>
        <Label x:Name="facultyDepartmentLabel"
               FontSize="16"
               HorizontalOptions="Start"
               TextColor="#333"/>
        <Label x:Name="emailLabel"
               FontSize="16"
               HorizontalOptions="Start"
               TextColor="#333"/>

        <!-- Navigation Buttons -->
       <HorizontalStackLayout>
               <Button Text="ลงทะเบียนเรียน"
                BackgroundColor="#FF229815"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="200"
                FontAttributes="Bold"
                Clicked="OnRegisterClicked"
                Margin="0,0,30,0"
                />
       <Button Text="ลดวิชาเรียน"
                BackgroundColor="#FFE0741C"
                TextColor="White"
                WidthRequest="200"
                CornerRadius="10"
                HeightRequest="50"
                FontAttributes="Bold"
                Clicked="OnRegisterClicked"
                Margin="0,0,30,0"
                />

                 <Button Text="ข้อมูลการลงทะเบียน"
                BackgroundColor="#FFDA04CC"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="200"
                HeightRequest="50"
                FontAttributes="Bold"
                Clicked="OnRegistrationInfoClicked"/>
       </HorizontalStackLayout>


       

        <Button Text="ออกจากระบบ"
                BackgroundColor="#FF3B30"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                FontAttributes="Bold"
                Clicked="OnLogoutClicked"/>

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mikkee.Pages.RegistrationInfoPage"
             Title="ข้อมูลการลงทะเบียน"
             BackgroundColor="#F5F5F5">
       <ScrollView Padding="20">
              <VerticalStackLayout Spacing="20">

                     <!-- Current Semester Information -->
                     <Border Stroke="#CCCCCC"
                                   StrokeThickness="1"
                                   StrokeShape="RoundRectangle 10"
                                   BackgroundColor="White"
                                   Padding="15">
                            <VerticalStackLayout Spacing="10">
                                   <Label Text="ข้อมูลภาคเรียนปัจจุบัน"
                                          FontSize="20"
                                          FontAttributes="Bold"
                                          HorizontalOptions="Center"
                                          TextColor="#333"/>

                                   <Label Text="รายวิชาที่ลงทะเบียน"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#555"
                                          Margin="0,10,0,5"/>


                                  




                                   <!-- Table for Current Semester -->
                                   <Grid x:Name="currentSemesterGrid"
                                         ColumnSpacing="1"
                                         RowSpacing="1"
                                         BackgroundColor="#CCCCCC">
                                          <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="100"/>
                                                 <ColumnDefinition Width="*"/>
                                                 <ColumnDefinition Width="110"/>
                                                 <ColumnDefinition Width="70"/>
                                                 <ColumnDefinition Width="70"/>
                                          </Grid.ColumnDefinitions>
                                          <Grid.RowDefinitions>
                                                 <RowDefinition Height="Auto"/>
                                                 <!-- Header Row -->
                                          </Grid.RowDefinitions>



                                          <!-- Sample Data Row (you'll populate this dynamically) -->
                                          <Label Grid.Row="1"
                                                        Grid.Column="0"
                                                        Text="CS101"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="1"
                                                        Text="กำำ"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="2"
                                                        Text="บรรยาย"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="3"
                                                        Text="3"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="4"
                                                        Text="A"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                   </Grid>

                            </VerticalStackLayout>
                     </Border>

                     <!-- Past Semester Information -->
                     <Border Stroke="#CCCCCC"
                                   StrokeThickness="1"
                                   StrokeShape="RoundRectangle 10"
                                   BackgroundColor="White"
                                   Padding="15">
                            <VerticalStackLayout Spacing="10">
                                   <Label Text="ข้อมูลภาคเรียนก่อนหน้า (ย้อนหลัง 1 ปี = 3 เทอม)"
                                          FontSize="20"
                                          FontAttributes="Bold"
                                          HorizontalOptions="Center"
                                          TextColor="#333"
                                          HorizontalTextAlignment="Center"
                                          LineBreakMode="WordWrap"/>

                                   <!-- <Label Text="ภาคเรียนที่ 1/2566"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#555"
                                          Margin="0,10,0,5"/> -->

                                   <!-- Table for Past Semesters -->
                                   <Grid x:Name="pastSemestersGrid"
                                         ColumnSpacing="1"
                                         RowSpacing="1"
                                         BackgroundColor="#CCCCCC">
                                          <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="100"/>
                                                 <ColumnDefinition Width="*"/>
                                                 <ColumnDefinition Width="110"/>
                                                 <ColumnDefinition Width="70"/>
                                                 <ColumnDefinition Width="70"/>
                                          </Grid.ColumnDefinitions>

                                          <!-- Header Row -->
                                          <Label Grid.Row="0"
                                                        Grid.Column="0"
                                                        Text="รหัสวิชา"
                                                 BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                 Padding="8"
                                                 FontAttributes="Bold"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>

                                          <Label Grid.Row="0"
                                                        Grid.Column="1"
                                                        Text="ชื่อวิชา"
                                                 BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                 Padding="8"
                                                 FontAttributes="Bold"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>

                                          <Label Grid.Row="0"
                                                        Grid.Column="2"
                                                        Text="แบบการจัดการ"
                                                 BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                 Padding="8"
                                                 FontAttributes="Bold"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>

                                          <Label Grid.Row="0"
                                                        Grid.Column="3"
                                                        Text="หน่วยกิต"
                                                 BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                 Padding="8"
                                                 FontAttributes="Bold"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>

                                          <Label Grid.Row="0"
                                                        Grid.Column="4"
                                                        Text="เกรด"
                                                 BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                 Padding="8"
                                                 FontAttributes="Bold"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>

                                          <!-- Sample Data Rows (you'll populate this dynamically) -->
                                          <Label Grid.Row="1"
                                                        Grid.Column="0"
                                                        Text="MATH101"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="1"
                                                        Text="แคลคูลัสและเรขาคณิตวิเคราะห์ 1"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="2"
                                                        Text="บรรยาย"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="3"
                                                        Text="3"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="1"
                                                        Grid.Column="4"
                                                        Text="B+"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>

                                          <Label Grid.Row="2"
                                                        Grid.Column="0"
                                                        Text="PHYS101"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="2"
                                                        Grid.Column="1"
                                                        Text="ฟิสิกส์ทั่วไป 1"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="2"
                                                        Grid.Column="2"
                                                        Text="บรรยาย/ปฏิบัติ"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="2"
                                                        Grid.Column="3"
                                                        Text="4"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                          <Label Grid.Row="2"
                                                        Grid.Column="4"
                                                        Text="A"
                                                 BackgroundColor="White"
                                                        TextColor="#333"
                                                 Padding="8"
                                                 HorizontalTextAlignment="Center"
                                                 LineBreakMode="WordWrap"/>
                                   </Grid>

                                  
                            </VerticalStackLayout>
                     </Border>

                     <!-- Navigation Buttons -->
                     <HorizontalStackLayout Spacing="20"
                                   HorizontalOptions="Center">
                            <Button Text="กลับไปหน้า Profile"
                                    BackgroundColor="#6200EA"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    WidthRequest="160"
                                    FontAttributes="Bold"
                                    Clicked="OnBackToProfileClicked"/>

                            <Button Text="ลงทะเบียนเรียน"
                                    BackgroundColor="#6200EA"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    WidthRequest="160"
                                    FontAttributes="Bold"
                                    Clicked="OnRegisterClicked"/>
                     </HorizontalStackLayout>

              </VerticalStackLayout>
       </ScrollView>
</ContentPage>
